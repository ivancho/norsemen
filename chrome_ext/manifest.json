{
  "name": "Gorsemen",
  "version": "1.0",
  "description": "Toggle English subs on NRK TV for Vikingane",

  "browser_action": {
    "default_icon": {
      "128": "icons/Frøya.png",
      "48": "icons/Frøya48.png"
    },
    "default_title": "English"
  },
  "permissions": ["webRequest", "webRequestBlocking", "downloads", "storage", "webNavigation", "alarms",
                  "https://undertekst.nrk.no/*", "https://tv.nrk.no/*",
                  "https://netflix.com/*", "https://*.nflxvideo.net/*"
                 ],
  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [ "subs/*" ],
  "manifest_version": 2
}
